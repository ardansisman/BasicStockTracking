@model DeliveryAddModel

<form method="post" asp-action="Create" class="p-3">
    <div class="row">
        <!-- Content Column -->
        <div class="col-12 mb-4">
            <!-- Project Card Example -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Ürün Ekle </h6>
                </div>
                <div class="card-body">
                    <div class="form-group row">
                        <div class="col-3 mb-4">
                            <h4 class="small font-weight-bold">Ürün Adı:</h4>
                            <select class="form-control" asp-for="Delivery.ProductId">
                                @foreach (var product in Model.ProductList)
                                {
                                    <option value="@product.Id">@product.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-3 mb-4">
                            <h4 class="small font-weight-bold">Şube Adı:</h4>
                            <select class="form-control" asp-for="Delivery.BranchId">
                                @foreach (var branch in Model.BranchList)
                                {
                                    <option value="@branch.Id">@branch.Name</option>
                                }
                            </select>
                        </div>

                        <div class="col-3 mb-4">
                            <h4 class="small font-weight-bold">Gönderilen Adet:</h4>
                            <input class="form-control" required asp-for="Delivery.Piece">
                        </div>
                        <div class="col-3 mb-4">
                            <h4 class="small font-weight-bold">Gönderim Tarihi:</h4>
                            <input type="datetime-local" class="form-control" required asp-for="Delivery.InvoiceDate">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4"></div>
                        <div class="form-group col-4">
                            <button type="submit" class="btn btn-block btn-info">Kaydet</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
